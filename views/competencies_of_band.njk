{% extends "base.njk" %}

{% block content %}




<div class="container">
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-3" id="text">Competencies of bands</h1>
        <p id="text">
          Listed below are competencies of each band at Kainos.
        </p>
      </div>
    </div>
  </div>
  
  {% if bands|length %}

<div class="container">
{%for band in bands%}
<br>
<h1>{{band.name}}</h1>
<br>
{%for competency in band.competency_info%}
<ul>
    <li> 
        <h4>{{competency[0]}}</h4>
        <p>{{competency[1]}}</p>
    </li>
</ul>
{%endfor%}
{%endfor%}
</div>
{% else %}
  <h4>Sorry, no competency informations  have been returned from our database. Please try again later!</h4>
{% endif %}
</div>


{% endblock %} 