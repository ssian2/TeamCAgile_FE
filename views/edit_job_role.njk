{% extends "base.njk" %}

{% block content %}
    <div class="container">
        <h1>Edit Job Role</h1>
        {% if job_roles | length %}
            {% for role in job_roles %}
                {% if role.id == body %}
                    <form method="post">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" name="name" id="name" class="form-control" value="{{role.name}}" required>
                        </div>
                        <div class="form-group">
                            <label for="summary">Specfication:</label>
                            <textarea name="summary" id="summary" class="form-control" rows="4" cols="50" required>{{role.specification}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="band">Band:</label>
                            <select name="band" id="band" class="form-control" required>
                                <option value="currentband">{{role["band"].name}}</option>
                                {% for band in bands %}
                                <option value="{{band.id}}">{{band.name}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="job_family">Capability:</label>
                            {% if sources.capability %}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <strong>Error!</strong>
                                    {{ sources.capability }}
                                </div>
                            {% endif %}
                            <select name="capability" id="capability" class="form-control" required>
                                <option value="currentcapability">{{role.capability}}</option>
                                {% for capability in capabilities %}
                                <option value="{{capability.id}}">{{capability.name}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        {%endif%}
                        {%endfor%}
                        {%endif%}
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            {% endblock %}