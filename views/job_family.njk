{% extends "base.njk" %}

{% block content %}

  {% if job_families | length %}

    <div class="container">
      <div class="jumbotron jumbotron-fluid" id="job-family">
        <div class="container">
          <h1 class="display-3" id="text">Job Families</h1>
        </div>
      </div>
    </div>

    {% for family in job_families %}
      <h3>{{family.name}}</h3>
      <p>Capability: {{family.capability_name}}</p>

    {% endfor %}

  {% else %}
    <p>Sorry, no job Families have been returned from our database. Please try again later!</p>

  {% endif %}

{% endblock %}