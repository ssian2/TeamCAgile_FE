{% set title = role.name %}
{% extends "base.njk" %}

{% block content %}
  <script>
    function makeDELETErequest(id) {
      $
        .ajax({
          url: '/admin/delete/' + id,
          type: 'DELETE'
        })
        .done(function (data) {
          console.log(id);
          console.log(data);
        });
    }
  </script>
  {% for role in job_roles_spec%}

    <div class="container">
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-3" id="text">Job Role Details</h1>
          <p id="subtitle-text">
          Listed below is the details for this job role
        </p>
        </div>
      </div>
    </div>

    {% if job_roles_spec | length %}
      <div class="container">
        <h1 id="title-text">{{ role.name }}</h1>
        <br>
        <div class="table-responsive">
          <table class="table table-bordered">

            <tbody>
              <tr>
                <th scope="row" width="50" class="gen-text">Specfication</th>
                <td>
                  {{role.specification}}
                  {% if job_roles_spec.url != null %}
                    <p>URL:</p>
                    <a href="{{job_roles_spec.url}}">View Spec Doc</a>
                  {% endif %}
                </td>
              </tr>
              <tr>
                <th scope="row" width="50" class="gen-text" >Band Level</th>
                <td>
                  {{role.bandName}}
                </td>
              </tr>
              <tr>
                <th scope="row" width="50" class="gen-text" >Capability</th>
                <td>
                  {{role.capability}}
                </td>
              </tr>
              <tr>
                <th scope="row" width="50" class="gen-text" >Job Family</th>
                <td>
                  {{role.jobFamilyName}}
                </td>
              </tr>
              {% if role.responsibilitiesList | length %}
                <tr>
                  <th scope="row" width="50" class="gen-text" >Responsibilities</th>
                  <td>
                    <ul>
                      {%for resp in role.responsibilitiesList %}
                        <li>{{resp}}</li>
                        {%endfor%}
                      </ul>
                    </td>
                  </tr>
                {% endif %}
              </tbody>
            </table>
            <a class="btn btn-danger" id="delete_job_role" href="#0" page_id = '{{id_data}}' role="button">Delete Job Role &raquo;</a>
          </div>
        {% else %}
          <h4>Sorry, no job specifications have been returned from our database. Please try again later!</h4>
        {% endif %}
      {% endfor %}

    </div>
  {% endblock %}