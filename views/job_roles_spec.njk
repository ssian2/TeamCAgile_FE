{% extends "base.njk" %}

{% block content %}
<h1>Job Role Specifications</h1>

{% if job_roles_spec|length %}

<h3>Listed below are the specfications for jobs at Kainos</h3>

<table class="table" style="margin-top:2%">
  <thead>
    <tr>
      <th scope="col">Job Specifications</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">{{job_roles_spec.name}}</th>
    </tr>
    <tr>
    <td scope="row">{{job_roles_spec.specification}}</td>    
    </tr>
  </tbody>
</table>
{% else %}
  <h2>There are no job role specifications</h2>
{% endif %}

{% endblock %} 