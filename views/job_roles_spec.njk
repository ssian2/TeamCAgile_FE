{% extends "base.njk" %}

{% block content %}
<h1>Job Role Specifications</h1>

{% if job_roles_spec|length %}

<h3>Listed below are the specfications for jobs at Kainos</h3>

<table class="table" style="margin-top:2%">
  <thead>
    <tr>
      <th scope="col">Job Specifications</th>
    </tr>
  </thead>
  <tbody>
  {% for spec in job_roles_spec %}
    <tr>
      <th scope="row">{{spec.specification}}</th>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<p>Sorry, no job specfications have been returned from our database. Please try again later!</p>
{% endif %}


{% endblock %} 