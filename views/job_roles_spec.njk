{% extends "base.njk" %}

{% block content %}

{% if job_roles_spec|length %}
<div class="container">

<h1>Job Specification</h1>
<br>
<div class="table-responsive">
 <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Job Role</th>
      <th scope="col">Specfication</th>
    </tr>
  </thead> 
  <tbody>
    <tr>
      
      <td>{{job_roles_spec.name}}</td>
      <td>{{job_roles_spec.specification}}</td>
      
    </tr>
  </tbody>
</table>
</div>
</div>
{% else %}
  <h2>There are no job role specifications.</h2>
{% endif %}


{% endblock %} 