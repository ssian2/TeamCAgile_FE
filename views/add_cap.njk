{% extends "base.njk" %}

{% block content %}
	<div class="container">
		<h1>Add a new capability</h1>
		<form method="post">

            <div class="form-group">
				<label for="cap_name">Capability name:</label>
				{% if sources.cap_name %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<strong>Error!</strong> {{ sources.cap_name }}
					</div>
				{% endif %}
				<input type="text" maxlength="20" name="cap_name" id="cap_name" class="form-control" value="{{body.cap_name}}" required>
			</div>
            <div class="form-group">
				<label for="lead_name">Capability lead name:</label>
				{% if sources.lead_name %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<strong>Error!</strong> {{ sources.lead_name }}
					</div>
				{% endif %}
				<input type="text" maxlength="100" name="lead_name" id="lead_name" class="form-control" value="{{body.lead_name}}" required>
			</div>
            <div class="form-group">
				<label for="url">Url to the lead photo:</label>
				{% if sources.url %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<strong>Error!</strong> {{ sources.url }}
					</div>
				{% endif %}
				<input type="text" maxlength="700" name="url" id="url" class="form-control" value="{{body.url}}" required>
			</div>	
			<div class="form-group">
				<label for="message">Lead message:</label>
				{% if sources.message %}
					<div class="alert alert-danger alert-dismissible fade show">
						<strong>Error!</strong> {{ sources.message }}
					</div>
				{% endif %}
				<textarea name="message" maxlength="1000" id="message" class="form-control" rows="4" cols="50" required>{{body.message}}</textarea>
			</div>
			<button type="submit" id="submit-btn" class="btn btn-primary">Submit</button>
		</form>
	</div>
{% endblock %}